extends layout

block append scripts
  != js("index")

block content
  .hero-unit
    .row-fluid
      .span2
        img(src='/images/logo.png', alt="Quizzical Logo")
      .span10
        h1 Welcome to Quizzical Empire Online!
        p You want trivia! We've got trivia!


  //- Insertion point for table or alert:
  #quiz-table-view

block templates
  #quiz-table-template
    .alert
      strong No Quizzes!&nbsp;
      a.btn.btn-primary.btn-mini.x-create-new(href='#') Add Some
    table.table.table-bordered.table-striped.table-condensed
      thead
        tr
          th Title
          th.span4 Created
          th.span3
      tbody
    button.btn.btn-primary.x-create-new Create New Quiz
  script#quiz-table-row-template(type="text/template")
    td {{title}}
    td {{created}}
    td.dropdown
      a.btn.dropdown-toggle(data-toggle="dropdown")
        | Actions
        b.caret
      ul.dropdown-menu
        li: a(href="#")
          i.icon-refresh
          | NYI
        li: a(href="#")
          i.icon-tag
          | NYI
        li: a(href="#")
          i.icon-comment
          | NYI
        li.divider
        li: a(href="#")
          i.icon-remove
          | Delete
